<Window x:Class="FakturacniSystem.InvoiceBuilder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FakturacniSystem"
        mc:Ignorable="d"
        Title="InvoiceBuilder" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="InvoiceDisplay" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="414" Width="300"/>

        <TextBox x:Name="ItemNameInput" HorizontalAlignment="Left" Margin="649,32,0,0" TextWrapping="Wrap" Text="New Item" VerticalAlignment="Top" Width="120"/>
        <Label Content="Item name:" HorizontalAlignment="Left" Margin="577,28,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="ItemAmountInput" HorizontalAlignment="Left" Margin="649,64,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120"/>
        <Label Content="Amount:" HorizontalAlignment="Left" Margin="591,60,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="ItemCostInput" HorizontalAlignment="Left" Margin="649,96,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="65"/>
        <Label Content="Cost:" HorizontalAlignment="Left" Margin="610,92,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ItemCurrencyCombo" HorizontalAlignment="Left" Margin="719,94,0,0" VerticalAlignment="Top" Width="50" Height="22"/>

        <Label Content="Tax:" HorizontalAlignment="Left" Margin="617,124,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ItemTaxInput" HorizontalAlignment="Left" Margin="649,128,0,0" TextWrapping="Wrap" Text="21" VerticalAlignment="Top" Width="80"/>
        <Label Content="%" HorizontalAlignment="Left" Margin="732,124,0,0" VerticalAlignment="Top"/>
        <Button Content="Confirm Item" HorizontalAlignment="Left" Margin="678,163,0,0" VerticalAlignment="Top" Height="29" Width="91" Click="ConfirmButtonClick"/>
        <Button Content="Save Invoice" HorizontalAlignment="Left" Margin="673,371,0,0" VerticalAlignment="Top" Height="31" Width="101" Click="SaveButtonClick"/>
    </Grid>
</Window>
