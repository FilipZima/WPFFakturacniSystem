<Window x:Class="FakturacniSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FakturacniSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="InvoiceList"  d:ItemsSource="{d:SampleData ItemCount=5}" Margin="565,10,35,66"/>
        <Button x:Name="NewInvoiceButton" Content="Nová faktura" HorizontalAlignment="Left" Margin="681,373,0,0" VerticalAlignment="Top" Height="32" RenderTransformOrigin="0.498,0.322" Width="84" Click="NewInvoiceButtonClick"/>
        <Button x:Name="OpenInvoiceButton" Content="Otevřít fakturu" HorizontalAlignment="Left" Margin="565,373,0,0" VerticalAlignment="Top" Height="32" RenderTransformOrigin="0.498,0.322" Width="84" Click="OpenInvoiceButtonClick" IsEnabled="False"/>
        <TextBlock x:Name="InvoicePreview"  HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="395" Width="445"/>
        <Button x:Name="ExportButton"  Content="Export" HorizontalAlignment="Left" Margin="472,10,0,0" VerticalAlignment="Top" Height="31" Width="74" Click="ExportButtonClick" IsEnabled="False"/>
    </Grid>
</Window>
